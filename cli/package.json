{
  "name": "cmdo-toolkit",
  "version": "0.0.1",
  "description": "Command line interface for the CMDO framework.",
  "bin": {
    "cmdo": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run compile && npm i -g",
    "compile": "../node_modules/.bin/tsc",
    "watch": "../node_modules/.bin/nodemon",
    "lint": "../node_modules/.bin/eslint 'src/**/*.ts'"
  },
  "repository": "https://github.com/cmdo/toolkit",
  "private": true,
  "dependencies": {
    "commander": "7.2.0",
    "glob": "^7.1.6",
    "inquirer": "^8.0.0",
    "terminal-table": "0.0.12"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3"
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "ts",
    "exec": "npm run build"
  }  
}
